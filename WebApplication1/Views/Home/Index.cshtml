    }

    .double-border-button:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
        margin: auto;
        border: 2px solid rgba(0, 0, 0, 0);
        transition: .4s;
        color: #f1c40f;
    }

    .double-border-button:hover:after {
        border-color: #f1c40f;
        width: calc(100% - 10px);
        color: #f1c40f;
        height: calc(100% + 10px);
    }
